{
  "name": "gratitude-jar",
  "type": "module",
  "version": "0.8.2",
  "private": true,
  "packageManager": "bun@1.2.13",
  "license": "MIT",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "prepare": "nuxt prepare",
    "postinstall": "nuxt prepare",
    "storybook": "storybook dev -p 6006 --no-open",
    "build-storybook": "storybook build",
    "test:unit": "vitest",
    "test:unit-coverage": "vitest --coverage",
    "test:unit-ui": "vitest --coverage --ui",
    "test:e2e": "playwright test",
    "test:e2e-ui": "playwright test --ui",
    "test:codegen": "playwright codegen http://localhost:3000/",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "nuxt typecheck",
    "db:start": "supabase start",
    "db:stop": "supabase stop",
    "db:restart": "supabase stop && supabase start",
    "db:reset": "supabase db reset",
    "db:status": "supabase status",
    "db:dump": "supabase db dump --local > backup.sql"
  },
  "dependencies": {
    "@nuxt/devtools": "^2.6.2",
    "@nuxt/ui": "^3.2.0",
    "@nuxtjs/seo": "^3.1.0",
    "@nuxtjs/supabase": "^1.5.3",
    "nuxt": "^3.17.6",
    "nuxt-security": "^2.2.0",
    "resend": "^4.6.0",
    "vue": "^3.5.17",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.16.2",
    "@iconify-json/lucide": "^1.2.54",
    "@iconify-json/lucide-lab": "^1.2.3",
    "@nuxt/eslint": "^1.5.0",
    "@nuxt/test-utils": "^3.19.2",
    "@nuxtjs/storybook": "^8.4.1",
    "@playwright/test": "^1.53.2",
    "@storybook/addon-a11y": "9.0.5",
    "@storybook/addon-docs": "9.0.5",
    "@storybook/addon-vitest": "9.0.5",
    "@types/node": "^24.0.10",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "^3.2.4",
    "@vue/test-utils": "^2.4.6",
    "@vueless/storybook-dark-mode": "^9.0.6",
    "eslint": "^9.30.1",
    "eslint-plugin-format": "^1.0.1",
    "eslint-plugin-storybook": "9.0.5",
    "happy-dom": "^18.0.1",
    "playwright-core": "^1.53.2",
    "storybook": "9.0.5",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.0.1"
  },
  "simple-git-hooks": {
    "commit-msg": "bun commitlint --edit $1",
    "pre-commit": "bun lint-staged && bun typecheck"
  },
  "lint-staged": {
    "*": [
      "bun lint"
    ]
  }
}
